<odoo>
    <data>
        <record model="ir.ui.view" id="exam_sessions_view">
            <field name="name">maz_solutions_exam_sessions.form</field>
            <field name="model">maz_solutions.exam_session</field>
            <field name="arch" type="xml">
                <form string="ExamSession Form">
                    <sheet>
                        <group colspan="2" col="2">
                            <h1>Exam Session Creation</h1>    
                            <group>
                                 <field name="exam"/>
                                 <field name="student"/>
                                <field name="dateTimeStart" />
                                <field name="dateTimeEnd" />
                                <field name="mark"/>
                            </group>        
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
