<odoo>
    <data>
        <record model="ir.ui.view" id="course_form_view">
            <field name="name">maz_solutions_course.form</field>
            <field name="model">maz_solutions.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group colspan="2" col="2">
                            <h1>Course Creation</h1>    
                            <group>
                                <field name="name"/>
                                <field name="dateStart"/>
                                <field name="dateEnd"/>
                            </group>   
                            <notebook>
                                <page string="Students">
                                    <field name="students"/>
                                </page>
                                <page string="Course Subjects">
                                    <field name="course_subject"/>
                                </page>
                            </notebook>
                        </group>                       
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="course_tree_view">
            <field name="name">maz_solutions_course.list</field>
            <field name="model">maz_solutions.course</field>
            <field name="arch" type="xml">
                <tree string="Course List">
                    <field name="name"/>
                    <field name="dateStart"/>
                    <field name="dateEnd"/>
                </tree>
            </field> 
        </record>
        <record model="ir.ui.view" id="student_search_view">
            <field name="name">student.search</field>
            <field name="model">maz_solutions.student</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>                
                </search>
            </field>
        </record>
    </data>
</odoo>